<body>
    <h1>Update Order: {{orderID}}</h1>
    <form action="/admin/update-order/{{orderID}}" method="post">
        {{#each products}}
        <div>
            <h2>{{name}}</h2>
            <label for="price-{{productID}}">Price:</label>
            <input type="number" id="price-{{productID}}" 
                name="products[{{@index}}][price]" value="{{price}}" min="0" step="0.01">
            <label for="quantity-{{productID}}">Quantity:</label>
            <input type="number" id="quantity-{{productID}}" 
                name="products[{{@index}}][orderquantity]" 
                value="{{orderquantity}}" min="0" max="{{currentQuantity}}">
            <input type="hidden" name="products[{{@index}}][productID]" 
                value="{{productID}}">
        </div>
        {{/each}}
        <button type="submit">Update Order</button>
    </form>
</body>
